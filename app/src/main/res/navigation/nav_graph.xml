<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/users_list_fragment">

    <fragment
        android:id="@+id/users_list_fragment"
        android:name="com.pchpsky.swivltesttask.feature_users.presentation.UserListFragment"
        android:label="label_user_list"
        tools:layout="@layout/fragment_user_list">
        <action
            android:id="@+id/action_user_list_to_user_detail"
            app:destination="@id/user_detail_fragment"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/user_detail_fragment"
        android:name="com.pchpsky.swivltesttask.feature_user_details.presentation.UserDetailFragment"
        android:label="label_detail"
        tools:layout="@layout/fragment_user_detail">
        <argument
            android:name="userName"
            app:argType="string"
            android:defaultValue=""/>
    </fragment>

</navigation>